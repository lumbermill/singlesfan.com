<h1>マスター一覧</h1>

<table class="table">
  <thead>
    <tr>
      <th>名前</th>
      <th>メールアドレス</th>
      <th>自己紹介</th>
      <th>有効</th>
      <th>最終ログイン</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @masters.each do |master| %>
      <tr>
        <td><%= master.name %></td>
        <td><%= master.email %></td>
        <td><%= master.desc %></td>
        <td><%= master.active %></td>
        <td></td>
        <td><%= link_to '閲覧', master %></td>
        <td><%= link_to '編集', edit_master_path(master) %></td>
        <td><%= link_to '削除', master, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

