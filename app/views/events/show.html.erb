<h1><%= @event.opendate_short+" "+@event.title %> </h1>

<% if notice then %>
<p class="alert alert-info" id="notice"><%= notice %></p>
<% end %>

<style>
table.table th{
  text-align: right;
}
</style>

<div class="row">
	<div class="col-md-6">
<table class="table">
<tr>
  <th>開催日</th>
  <td><%= @event.opendate %>
 <%= @event.opentime_short %></td>
</tr>
<tr>
  <th>マスター</th>
  <td><%= link_to @event.master.name, master_path(@event.master_id) %></td>
</tr>
<tr>
  <th>タイトル</th>
  <td><%= @event.title %></td>
</tr>
<tr>
  <th>概要</th>
  <td><%= @event.short_desc %></td>
</tr>
<tr>
  <th>サブマスター</th>
  <td><%= Master.find(@event.submaster_id).name if @event.submaster_id %></td>
</tr>
<tr>
  <th>URL</th>
  <td><%= @event.url %></td>
</tr>
<tr>
  <th>登録日時</th>
  <td class="text-muted"><%= @event.created_at %></td>
</tr>
</table>
</div>
<div class="col-md-6">
	<img src="/img/<%= @event.picture_id %>" alt="" style="max-width: 300px;" class="img-rounded"/>
	<div id="socials">
		<div class="fb-like" data-href="https://developers.facebook.com/docs/plugins/" data-layout="standard" data-action="like" data-show-faces="true" data-share="true"></div>
		TODO Twitter
	</div>
</div>
</div>
<% if session[:master_id] then %>
TODO ツイッターのリンク
<%= link_to '再編集', edit_event_path(@event),class: "btn btn-default" %>
<%= link_to 'シフト一覧へ', events_path,class: "btn btn-default" %>
<% end %>

