<h1>Listing pictures</h1>

<table>
  <thead>
    <tr>
      <th>Origin</th>
      <th>Thumb</th>
      <th>Desc</th>
      <th>Active</th>
      <th>Posted by</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pictures.each do |picture| %>
      <tr>
        <td><%= picture.origin %></td>
        <td><%= picture.thumb %></td>
        <td><%= picture.desc %></td>
        <td><%= picture.active %></td>
        <td><%= picture.posted_by %></td>
        <td><%= link_to 'Show', picture %></td>
        <td><%= link_to 'Edit', edit_picture_path(picture) %></td>
        <td><%= link_to 'Destroy', picture, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Picture', new_picture_path %>
