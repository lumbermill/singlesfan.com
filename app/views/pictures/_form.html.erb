<div class="row">
<div class="col-md-6">
<%= form_for(@picture) do |f| %>
  <% if @picture.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@picture.errors.count, "error") %> prohibited this picture from being saved:</h2>

      <ul>
      <% @picture.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :origin, "写真" %>
    <%= f.file_field :origin, class: "form-control" %>
    <small>300 ~ 600px程度のJPEG画像</small>
  </div>
  <div class="form-group">
    <%= f.label :desc, "メモ（任意）" %>
    <%= f.text_field :desc, class: "form-control" %>
  </div>
  <div class="actions">
    <%= f.submit '追加・更新する' %>
  </div>
<% end %>
</div>
</div>
